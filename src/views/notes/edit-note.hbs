{{#if success_msg}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
{{success_msg}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="col-md-4 mx-auto">
  <div class="card">
      <div class="card-header">
          <h3>Edit Note</h3>
      </div>
      <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT"  method="post">
            <input type="hidden" name="_method" value="PUT">
              <div class="form-group mb-2">
                <input type="text" name= "title" class="form-control" placeholder="Title" value="{{note.title}}">
              </div>
              <div class="form-group mb-2">
                  <textarea name="description" class="form-control">{{note.description}}</textarea>
              </div>
              <div class="form-group">
                  <button class="btn btn-primary btn-block" type="submit">Save</button>
              </div>
            </form>
      </div>
  </div>
</div>